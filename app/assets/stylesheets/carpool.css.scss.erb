    color: lighten($green, 50%);
    background: $green;
    text-align: center;
    border-bottom-right-radius: $radius;
    border-bottom-left-radius: $radius;
    -webkit-box-shadow: inset 2px 2px 5px darken($green, 80%);
    -moz-box-shadow: inset 2px 2px 5px darken($green, 80%);
    box-shadow: inset 2px 2px 5px darken($green, 80%);
}

.group:before,
.group:after {
content: "";
display: table;
}
.group:after {
clear: both;
}
.group {
zoom: 1; /* IE6&7 */
}

