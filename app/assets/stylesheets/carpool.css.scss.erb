#loginout{
    position: relative;
    top: -1.5em;
    text-align: right;
    padding: 0 1em 0 1em;
    color: lighten($green, 70%);
    -webkit-text-shadow: 1px 1px 1px darken($green, 50%);
    -moz-text-shadow: 1px 1px 1px darken($green, 50%);
    text-shadow: 1px 1px 1px darken($green, 50%);
    border-top-right-radius: $radius;
    border-top-left-radius: $radius;
    -webkit-box-shadow: $green-box-shadow;
    -moz-box-shadow: $green-box-shadow;
    box-shadow: $green-box-shadow;
    background: $green;
    a {
	color: lighten($green, 40%);
        -webkit-transition: all .2s ease-in-out;
        -moz-transition: all .2s ease-in-out;
        transition: all .2s ease-in-out;
        :hover {
    	  background: lighten($green, 50%);
	  text-shadow: 2px -2px 0 lighten($yellow, 80%), 0 0 10px darken($yellow, 90%); 
          -webkit-border-radius: 10px;
          -moz-border-radius: 10px;
          border-radius: 10px;
	  -webkit-transform: translate(-2px);
	  -moz-transform: translate(-2px);
	  transform: translate(-2px);
	}
    }
}

footer{
//    position: absolute;
